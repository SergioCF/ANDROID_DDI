<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Actividad1c"
    android:weightSum="1"
    android:background="#000000">

        // Layout borde negro 10dp
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:weightSum="4"
            android:padding="10dp"
            android:background="@drawable/bordecolores">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="rojo"
                    android:id="@+id/textView"
                    android:textAlignment="center"
                    android:background="@drawable/borderojo"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="verde"
                    android:id="@+id/textView2"
                    android:background="@drawable/bordeverde"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="-5dp"
                    android:padding="6dp"
                    android:textColor="#ffffff" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="azul"
                    android:id="@+id/textView3"
                    android:background="@drawable/bordeazul"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="-5dp"
                    android:padding="6dp"
                    android:textColor="#ffffff" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="amarillo"
                    android:id="@+id/textView4"
                    android:background="@drawable/bordeamarillo"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="-5dp"
                    android:padding="6dp"
                    android:textColor="#ffffff" />

        </LinearLayout>

    // Layout Columnas
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:layout_gravity="left|bottom"
        android:paddingTop="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="columna_uno"
            android:id="@+id/textView5"
            android:background="@drawable/lineacolumnastop"
            android:textSize="40dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:padding="15dp"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="columna_dos"
            android:id="@+id/textView6"
            android:background="@drawable/lineacolumnastop"
            android:textSize="40dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:padding="15dp"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="columna_tres"
            android:id="@+id/textView7"
            android:background="@drawable/lineacolumnastop"
            android:textSize="40dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:padding="15dp"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="columna_cuatro"
            android:id="@+id/textView8"
            android:background="@drawable/lineacolumnastop"
            android:textSize="40dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:padding="15dp"
            android:textColor="#ffffff" />

    </LinearLayout>

</TableLayout>
